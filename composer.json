{
  "name": "msbios/doctrine",
  "description": "MSBios Doctrine",
  "license": "GPL",
  "keywords": [
    "php"
  ],
  "homepage": "https://github.com/msbios/msbios-doctrine",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Judzhin Miles",
      "email": "info@msbios.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "MSBios\\Doctrine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MSBiosTest\\Doctrine\\": "tests/"
    }
  },
  "require": {
    "doctrine/doctrine-orm-module": "^1.1",
    "msbios/msbios": "~1.0",
    "msbios/stdlib": "~1.0",
    "msbios/json": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7",
    "zendframework/zend-test": "^3.1",
    "squizlabs/php_codesniffer": "^3.0",
    "zendframework/zend-router": "^3.0"
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": [
      "@cs-check",
      "phpunit --colors=always"
    ],
    "cleanup": "rm ./data/cache/*.php && rm ./data/logs/*.log",
    "alter": "./vendor/bin/doctrine-module orm:schema-tool:update --force",
    "commit": "git add . && git commit -a -m \"Lazy Composer Commiter\" && git push",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
    "upload-coverage": "coveralls -v"
  }
}